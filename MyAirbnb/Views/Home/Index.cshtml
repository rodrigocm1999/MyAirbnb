@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Post>


<div class="container">
    @foreach (var m in Model)
    {
            <div class="container border-bottom py-2" onclick="window.location.href = '/Home/Details/@m.Id';">

                <h3>@m.Title</h3>
                <h5>@m.Address</h5>

                <div>
                    @foreach (var c in m.Comodities)
                    {
                        <span class="rounded">@c.Name</span>
                    }
                </div>
            </div>
    }

</div>
