@model Post

@{ var m = Model;}

<div class="container border-bottom py-2 d-flex">
    @{
        string id = "car" + m.Id;
    }

    <div id="@id" class="carousel slide car-img" data-ride="carousel">
        <ol class="carousel-indicators">
            @if (m.PostImages != null)
                @for (int i = 0; i < m.PostImages.Count; i++)
                {
                    <li data-target="#@id" data-slide-to="@i"></li>
                    <li data-target="#@id" data-slide-to="@i"></li>
                }
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item">
                <img src="https://imgcy.trivago.com/c_fill,d_dummy.jpeg,f_auto,h_190,q_auto,w_240/partnerimages/28/66/286691006.jpeg" />
            </div>
            <div class="carousel-item">
                <img src="https://imgcy.trivago.com/c_fill,d_dummy.jpeg,f_auto,h_190,q_auto,w_240/partnerimages/28/66/286691016.jpeg" />
            </div>
        </div>
        <a class="carousel-control-prev" href="#@id" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#@id" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="mx-3 position-relative w-100">
        <h3><a href="/Home/Details/@m.Id" class="text-dark">@m.Title</a></h3>
        <h5>@m.Address</h5>

        @{
            var roundRating = Math.Round(m.Rating);
            for (int i = 0; i < 5; i++)
            {
                var color = "#CBC050";
                if (i >= roundRating)
                    color = "black";
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="@color">
                    <use href="#svg-star" />
                </svg>
            }
        }

        <div class="my-2 position-absolute overflow-hidden d-flex w-100" style="bottom: 0; left: 0;">
            @foreach (var c in m.Comodities)
            {
                <span class="rounded btn-sm btn-info mr-1">@c.Name</span>
            }
        </div>
    </div>
</div>