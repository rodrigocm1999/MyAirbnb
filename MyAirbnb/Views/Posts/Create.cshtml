@model MyAirbnb.Models.EditPost
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.ManagerId" class="control-label"></label>
                <input asp-for="Post.ManagerId" class="form-control" />
                <span asp-validation-for="Post.ManagerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Address" class="control-label"></label>
                <input asp-for="Post.Address" class="form-control" />
                <span asp-validation-for="Post.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Description" class="control-label"></label>
                <input asp-for="Post.Description" class="form-control" />
                <span asp-validation-for="Post.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Html" class="control-label"></label>
                <input asp-for="Post.Html" class="form-control" />
                <span asp-validation-for="Post.Html" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Price" class="control-label"></label>
                <input asp-for="Post.Price" class="form-control" />
                <span asp-validation-for="Post.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.NBeds" class="control-label"></label>
                <input asp-for="Post.NBeds" class="form-control" />
                <span asp-validation-for="Post.NBeds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.NBedrooms" class="control-label"></label>
                <input asp-for="Post.NBedrooms" class="form-control" />
                <span asp-validation-for="Post.NBedrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Comodities" class="control-label"></label>
                @foreach (var c in Model.Comodities)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@c.Id" name="Post.Comodities[]">
                        <label class="form-check-label" for="flexCheckDefault">@c.Name</label>
                    </div>
                }
                <span asp-validation-for="Post.Comodities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Type" class="control-label"></label>
                <select asp-for="Post.Type" class="form-control">
                    @foreach (var e in Enum.GetNames(typeof(PropertyType)))
                    {
                        <option value="@e">@e</option>
                    }
                </select>
                <span asp-validation-for="Post.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Availability" class="control-label"></label>
                <select asp-for="Post.Availability" class="form-control">
                    @foreach (var e in Enum.GetNames(typeof(AvailabilityType)))
                    {
                        <option value="@e">@e</option>
                    }
                </select>
                <span asp-validation-for="Post.Availability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
