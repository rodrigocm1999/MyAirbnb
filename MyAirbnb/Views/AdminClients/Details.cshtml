@model MyAirbnb.Models.ClientsAdminView

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ClientsAdminView</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<hr />
<table>
    <thead>
        
            <tr class="col-sm-2">
                <th>
                    @Html.DisplayNameFor(model => model.Reservations)
                </th>
            </tr>
        
    </thead>
    <tbody>
        @foreach (var reservation in Model.Reservations)
        {
            <tr>
                <td>
                    @reservation.Post.Title
                    @Html.DisplayFor(modelItem => reservation.Post.Address)
                </td>
                <td>
                    <a asp-action="ClienteReservation" asp-route-id="@reservation.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <a asp-action="Index">Back to List</a>
</div>
