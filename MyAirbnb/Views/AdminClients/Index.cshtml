@model IEnumerable<MyAirbnb.Models.ClientsAdminView>

@{
    ViewData["Title"] = "Index";
}

<h1>Clients List</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Client.FirstName) @Html.DisplayFor(model => item.Client.LastName)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                @*<a asp-controller="User" asp-action="Reservations" asp-route-id="@item.Id">Details</a>*@
                <a  asp-action="Details" asp-route-id="@item.Client.Id">Details</a> | 
                <a asp-action="Delete" asp-route-id="@item.Client.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
