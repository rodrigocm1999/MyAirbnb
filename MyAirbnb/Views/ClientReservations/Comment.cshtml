@model MyAirbnb.Models.ReservationCommentModel

@{
    ViewData["Title"] = "Comment";
}

<h1>Comment</h1>
<hr />

<div class="row">
    <div class="container">
        <form asp-action="Comment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
           
            <div class="col-md-4 pl-0">
                <div class="form-group">
                    <label asp-for="TotalPrice" class="control-label"></label>
                    <span id="">@Model.TotalPrice</span>
                </div>
                <div class="form-group">
                    <label asp-for="RatingPost" class="control-label"></label>
                    <input asp-for="RatingPost" class="form-control" />
                    <span asp-validation-for="RatingPost" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
